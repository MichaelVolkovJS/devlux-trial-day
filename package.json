{
  "name": "devlux-trial-day",
  "version": "1.0.0",
  "description": "Package updater",
  "keywords": [
    "BITBUCKET"
  ],
  "author": "Michael Volkov",
  "license": "ISC",
  "scripts": {
    "update-package": "ts-node src/actions/update-package/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.9",
    "@types/node": "^20.9.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
